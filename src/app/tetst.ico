<svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
    <defs>
        <!-- Glow effect for neon style -->
        <filter id="glow">
            <feGaussianBlur stdDeviation="4" result="coloredBlur" />
            <feMerge>
                <feMergeNode in="coloredBlur" />
                <feMergeNode in="SourceGraphic" />
            </feMerge>
        </filter>
        <!-- Drop shadow for container -->
        <filter id="dropShadow" x="-20%" y="-20%" width="140%" height="140%">
            <feGaussianBlur in="SourceAlpha" stdDeviation="3" result="blur" />
            <feOffset in="blur" dx="2" dy="2" result="offsetBlur" />
            <feMerge>
                <feMergeNode in="offsetBlur" />
                <feMergeNode in="SourceGraphic" />
            </feMerge>
        </filter>
    </defs>

    <!-- Container Circle for logo style -->
    <circle cx="200" cy="200" r="190" fill="none" stroke="#2563eb" stroke-width="4" filter="url(#dropShadow)" />

    <!-- Arcade Cabinet -->
    <g transform="translate(50,50)" filter="url(#glow)">
        <!-- Cabinet body -->
        <rect x="0" y="0" width="300" height="200" rx="15" ry="15" fill="#222" stroke="#2563eb" stroke-width="4" />
        <!-- Screen -->
        <rect x="20" y="20" width="260" height="120" fill="#000" stroke="#2563eb" stroke-width="2" />
        <!-- Base accent -->
        <rect x="100" y="160" width="100" height="20" fill="#2563eb" />
    </g>

    <!-- Joystick -->
    <g transform="translate(200,280)" filter="url(#glow)">
        <!-- Base circle -->
        <circle cx="0" cy="0" r="30" fill="#222" stroke="#3a6ea5" stroke-width="4" />
        <!-- Stick -->
        <line x1="0" y1="0" x2="0" y2="-50" stroke="#3a6ea5" stroke-width="4" stroke-linecap="round" />
        <!-- Top button -->
        <circle cx="0" cy="-50" r="8" fill="#3a6ea5" />
    </g>

    <!-- Web3 Blockchain Elements (Hexagons & Connections) -->
    <g filter="url(#glow)">
        <!-- First Hexagon -->
        <g transform="translate(300,100)">
            <polygon points="20,0 10,17 -10,17 -20,0 -10,-17 10,-17" fill="none" stroke="#dc2626" stroke-width="3" />
            <line x1="20" y1="0" x2="40" y2="0" stroke="#dc2626" stroke-width="2" />
        </g>
        <!-- Second Hexagon -->
        <g transform="translate(340,100)">
            <polygon points="20,0 10,17 -10,17 -20,0 -10,-17 10,-17" fill="none" stroke="#dc2626" stroke-width="3" />
            <line x1="-20" y1="0" x2="-40" y2="0" stroke="#dc2626" stroke-width="2" />
        </g>
        <!-- Third Hexagon -->
        <g transform="translate(320,140)">
            <polygon points="20,0 10,17 -10,17 -20,0 -10,-17 10,-17" fill="none" stroke="#dc2626" stroke-width="3" />
        </g>
    </g>

    <!-- Additional Blockchain Nodes -->
    <g filter="url(#glow)">
        <circle cx="50" cy="350" r="10" fill="#0a246a" />
        <circle cx="100" cy="370" r="10" fill="#0a246a" />
        <circle cx="150" cy="340" r="10" fill="#0a246a" />
        <line x1="50" y1="350" x2="100" y2="370" stroke="#0a246a" stroke-width="2" />
        <line x1="100" y1="370" x2="150" y2="340" stroke="#0a246a" stroke-width="2" />
    </g>
</svg>